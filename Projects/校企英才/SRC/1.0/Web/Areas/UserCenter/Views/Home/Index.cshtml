@using HiLand.Utility.Entity
@model LogicStatusInfo
@{
    this.Layout = null;
    ViewBag.Title = "Index";

    string messageTip = string.Empty;
    if (Model != null)
    {
        messageTip = Model.Message;
    }
    else
    {
        messageTip = "请必须输入账号和口令，谢谢！";
    }
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN""http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>青岛校企英才人力资源开发有限公司</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="@Url.Content("~/Content/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/adminStyle.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/invalid.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/notificationStyle.css")" type="text/css" media="screen" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/facebox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.wysiwyg.js")"></script>

</head>
<body id="login">
    <div id="login-wrapper" class="png_bg">
        <div id="login-top">
            <h1>
                青岛校企英才人力资源开发有限公司</h1>
            <!-- Logo (221px width) -->
            <a href="@Url.Action("Index", "Home")">
                <img id="logo" src="@Url.Content("~/Content/Images/logo.png")" alt="logo" /></a>
        </div>
        <!-- End #logn-top -->
        <div id="login-content">
            @using (Html.BeginForm())
            {
                <div class="notification information png_bg">
                    <div>
                        @messageTip
                    </div>
                </div>
                <p>
                    <label>
                        账号</label>
                    <input class="text-input" name="userName" type="text" />
                </p>
                <div class="clear">
                </div>
                <p>
                    <label>
                        口令</label>
                    <input class="text-input" name="password" type="password" />
                </p>
                <div class="clear">
                </div>
                <p>
                    <input class="buttons" type="submit" style="width:80px;" value="登录" />
                </p>
            }
        </div>
        <!-- End #login-content -->
    </div>
    <!-- End #login-wrapper -->
    <!--[if IE 6]>
        <script src="@Url.Content("~/Scripts/DD_belatedPNG_0.0.8a.js")></script>
        <script type="text/javascript">
            DD_belatedPNG.fix('div,ul,img,li,input,a');
        </script>
	<![endif]-->
</body>
</html>

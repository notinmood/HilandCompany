@using HiLand.Utility.Enums;
@using HiLand.Framework.BusinessCore;
@using HiLand.Framework.BusinessCore.Enum;
@using HiLand.Framework.BusinessCore.BLL;
@using HiLand.Utility4.Data;
@using HiLand.Utility4.MVC.Controls;
@using XQYC.Business.Entity;
@using XQYC.Web.Control;
@using HiLand.General.BLL;
@model EnterpriseServiceEntity
@{
    ViewBag.Title = "信息员信息";
    this.Layout = null;

    string itemTypeName = this.ViewBag.ItemTypeName;
    string returnUrl = this.ViewBag.ReturnUrl;
}
<div id="formContainer">
    @* TODO:xieran 以下内容主要是为了修复弹出选择器的bug,有可能对页面其他的地方有影响 *@
    <style type="text/css">
        #main-content ul,
        #main-content ol {
            padding: 0 0 0 18px;
        }

            #main-content ul li {
                background: url() center left no-repeat;
                padding: 0px;
            }

        #main-content ol {
            padding: 0px;
        }

            #main-content ol li {
                list-style: none;
                padding: 0;
            }
    </style>
    @using (Html.BeginForm())
    { 
        <table>
            <tr>
                <td style="width: 120px;">服务类型名称:
                </td>
                <td>@itemTypeName
                </td>
            </tr>

            <tr>
                <td>服务状态:
                </td>
                <td>@Html.DropDownListFor(entity => entity.EnterpriseServiceStatus, EnumEx.BuildSelectItemList<Logics>())
                </td>
            </tr>
            <tr>
                <td>信息提供人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "ProviderUser", Model.ProviderUserName, Model.ProviderUserGuid.ToString())
                </td>
            </tr>
            <tr>
                <td>推荐人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "RecommendUser", Model.RecommendUserName, Model.RecommendUserGuid.ToString())
                </td>
            </tr>
            <tr>
                <td>财务人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "FinanceUser", Model.FinanceUserName, Model.FinanceUserGuid.ToString())
                </td>
            </tr>
            <tr>
                <td>客服人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "ServiceUser", Model.ServiceUserName, Model.ServiceUserGuid.ToString())
                </td>
            </tr>
            <tr>
                <td>业务人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "BusinessUser", Model.BusinessUserName, Model.BusinessUserGuid.ToString())
                </td>
            </tr>
            <tr>
                <td>安置人员:
                </td>
                <td class="fixClass">
                    @HtmlHelperEx.XQYCEmployeeChooser(Html, "SettleUser", Model.SettleUserName, Model.SettleUserGuid.ToString())
                </td>
            </tr>
        </table>
        <input type="hidden" id="ItemKey" value="@Model.EnterpriseServiceGuid" />
        <input type="hidden" id="returnUrl" value="@returnUrl" />
        @Html.HiddenFor(entity => entity.EnterpriseGuid)
        @Html.HiddenFor(entity => entity.EnterpriseInfo)
        @Html.HiddenFor(entity => entity.EnterpriseServiceType)
        <input type="submit" id="submitButton" value="保存" class="buttons" /><a class="overlayClose" title="请暂时使用敲击键盘'ESC'键关闭本弹窗"></a>
    }
</div>

<div class="moduleStyle moduleStyle1">
    <h5>最新劳务人员信息(最近一月内录入的人数为: @laborRegisterCount)
    </h5>
    @foreach (LaborEntity item in laborLastestList)
    { 
        <div> @string.Format("【{0}】的信息于【{1}】录入系统", item.UserNameCN,item.UserRegisterDate.ToShortDateString()) </div>
    }
</div>
<div class="moduleStyle moduleStyle1">
    <h5>最新劳务人员信息(最近一月内录入的人数为: @laborLastCountCount)
    </h5>
    @foreach (LaborContractEntity item in laborLastContractList)
    { 
        <div> @string.Format("【{0}】于【{1}】在【{2}】入职", item.Labor.UserNameCN,item.LaborContractStartDate.ToShortDateString(),item.Enterprise.CompanyNameShort) </div>
    }
</div>
<div class="moduleStyle moduleStyle1">
    <h5>最新离职人员信息(最近一月内离职的人数为: @laborDiscontinueCount)
    </h5>
    @foreach (LaborContractEntity item in laborDiscontinueContractList)
    { 
        <div> @string.Format("【{0}】于【{1}】在【{2}】离职", item.Labor.UserNameCN,item.LaborContractDiscontinueDate.ToShortDateString(),item.Enterprise.CompanyNameShort)</div>
    }
</div>
<div class="clear"></div>
